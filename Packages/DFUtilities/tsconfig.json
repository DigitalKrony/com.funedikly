{
  "extends": "../../common/config/typescript/tsconfig.json",
  "compilerOptions": {
    "outDir": "lib",
    "rootDir": "src",
    "baseUrl": "./src/",
    "useUnknownInCatchVariables": false,
    "downlevelIteration": true,
    "paths": {
      "@/*": ["./*"]
    }
  },
  "typeRoots": ["node_modules/@types"],
  "include": ["./src/**/*"],
  "exclude": ["./lib", "./node_modules"]
}
